#newGameOptionsOverlay

#newGameOptionsModal.menu-popup.modal.dark_shadow
  form#gameOptionsForm
    p Token color
    #tokenRadioBttns
      input#green(type='radio', name='tokenColor', value='green' checked)
      label(for='green')
        img.tokenButton.light_shadow(src="./assets/meeple_player.svg" alt='green')

      input#red(type='radio', name='tokenColor', value='red')
      label(for='red')
        img.tokenButton.light_shadow(src="./assets/meeple_enemy.svg" alt='red')
    
    p#difficultyTitle Difficulty
    #difficulty
      input#easyAI(type='radio', name='difficulty', value='easyAI' checked)
      label(for='easyAI')
        .layoutButton.light_shadow Easy

      input#mediumAI(type='radio', name='difficulty', value='mediumAI')
      label(for='mediumAI') 
        .layoutButton.light_shadow Medium

    p Starting layout
    #layoutRadioBttns
      input#razeway(type='radio', name='layout', value='razeway' checked)
      label(for='razeway')
        img.layoutButton.light_shadow(src="./assets/razeway.png" alt='razeway')

      input#towers(type='radio', name='layout', value='towers')
      label(for='towers')
        img.layoutButton.light_shadow(src="./assets/towers.png" alt='towers')

      input#oldcity(type='radio', name='layout', value='oldcity')
      label(for='oldcity')
        img.layoutButton.light_shadow(src="./assets/oldcity.png" alt='oldcity')

    p
      button.menu-button.light_shadow(type='submit') Start game